{
  "name": "remark-react-codemirror",
  "version": "1.1.0",
  "description": "Syntax highlighting for remark-react through CodeMirror",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "watch": "babel src --watch -d lib",
    "lint": "eslint src --ext .js",
    "test": "npm run lint && mocha --require @babel/register --require test/setup.js",
    "prepublish": "npm test; npm run build"
  },
  "keywords": [
    "remark",
    "react",
    "codemirror",
    "syntax",
    "highlight"
  ],
  "author": "Takuya Matsuyama <hi@craftz.dog>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craftzdog/remark-react-codemirror.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "codemirror": "^5.48.2",
    "deepmerge": "^4.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jsdom": "^15.1.1",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "remark": "^11.0.1",
    "remark-react": "^6.0.0"
  },
  "dependencies": {
    "react-codemirror-runmode": "^1.0.4"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": ">= 0.11.2 < 17.0.0"
  }
}
