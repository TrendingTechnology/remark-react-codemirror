{
  "name": "remark-react-codemirror",
  "version": "1.0.5",
  "description": "Syntax highlighting for remark-react through CodeMirror",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "watch": "babel src --watch -d lib",
    "lint": "eslint src --ext .js",
    "test": "npm run lint && mocha --require @babel/register --require test/setup.js",
    "prepublish": "npm test; npm run build"
  },
  "keywords": [
    "remark",
    "react",
    "codemirror",
    "syntax",
    "highlight"
  ],
  "author": "Takuya Matsuyama <hi@craftz.dog>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craftzdog/remark-react-codemirror.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "codemirror": "^5.44.0",
    "deepmerge": "^2.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jsdom": "^14.0.0",
    "mocha": "^4.0.1",
    "prettier": "^1.16.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^16.0.0",
    "remark": "^10.0.1",
    "remark-react": "^5.0.1"
  },
  "dependencies": {
    "react-codemirror-runmode": "^1.0.4"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": ">= 0.11.2 < 17.0.0"
  }
}
